<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/textViewToday"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:text="Today"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDate"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:gravity="right"
        android:text="Date"
        android:textColor="@color/light_purple"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewToday"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/graphPlaceholder"
        android:layout_width="408dp"
        android:layout_height="296dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logSymptomsButton"
        android:layout_width="158dp"
        android:layout_height="76dp"
        android:background="@drawable/transparent_background"
        android:text="Log Your Day"
        android:drawableBottom="@drawable/ic_plus"
        app:layout_constraintEnd_toStartOf="@id/suggestPoseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphPlaceholder" />

    <Button
        android:id="@+id/suggestPoseButton"
        android:layout_width="158dp"
        android:layout_height="76dp"
        android:background="@drawable/transparent_background"
        android:drawableBottom="@drawable/ic_exercises"
        android:text="Suggested Pose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logSymptomsButton"
        app:layout_constraintTop_toBottomOf="@id/graphPlaceholder" />

    <Spinner
        android:id="@+id/poseSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logSymptomsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/pieChartPlaceholder"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/poseSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>